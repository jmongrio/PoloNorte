@model UIPoloNorte.Models.Cliente

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar cliente</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <input asp-for="IdCliente" class="form-control" readonly/>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" readonly/>
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreCompleto" class="control-label"></label>
                <input asp-for="NombreCompleto" class="form-control" />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdRefDescuento" class="control-label"></label>
                <select asp-for="IdRefDescuento" class="form-control" asp-items="ViewBag.IdRefDescuento"></select>
                <span asp-validation-for="IdRefDescuento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompraReciente" class="control-label"></label>
                <input asp-for="CompraReciente" class="form-control" readonly/>
                <span asp-validation-for="CompraReciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComprasUltimoAno" class="control-label"></label>
                <input asp-for="ComprasUltimoAno" class="form-control" readonly/>
                <span asp-validation-for="ComprasUltimoAno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompraAc" class="control-label"></label>
                <input asp-for="CompraAc" class="form-control" readonly/>
                <span asp-validation-for="CompraAc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listar">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
